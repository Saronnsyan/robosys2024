import random

def random_guessing_game():
    print("ランダム数当てゲーム！1か2を入力してください。連続で当てた回数を計測します！")
    consecutive_correct = 0

    while True:
        # ランダムに1または2を生成
        random_number = random.randint(1, 2)
        
        try:
            # ユーザーの入力を取得
            user_guess = int(input("あなたの予想（1か2）："))
            if user_guess not in [1, 2]:
                print("1か2を入力してください！")
                continue

            if user_guess == random_number:
                consecutive_correct += 1
                print(f"正解！現在の連続正解回数: {consecutive_correct}")
            else:
                print(f"不正解！ランダム数は {random_number} でした。")
                print(f"最終的な連続正解回数は {consecutive_correct} でした。")
                break
        except ValueError:
            print("エラー：1または2の数字を入力してください！")

# ゲームの実行
random_guessing_game()

